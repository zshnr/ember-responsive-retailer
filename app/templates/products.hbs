<div class='container'>
  <div class='row'>
    {{#each model as |product|}}
      {{#product-list addToCart='addToCart' removeFromCart='removeFromCart' product=product}}
        {{outlet}}
      {{/product-list}}
    {{/each}}
  </div>
  <div class='row'>
    {{#each model as |product|}}
    <div class='col-xs-6 col-sm-6 col-md-4'>
      <h2> Shopping Cart </h2>
      <div class="list-group">
        <a href="#" class="list-group-item">
          <h4 class="list-group-item-heading">{{product.name}}</h4>
          <p class="list-group-item-text">{{product.quantityInCart}}</p>
        </a>
      </div>
    </div>
  </div>
</div>

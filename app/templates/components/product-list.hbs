<div class='col-xs-12 col-sm-6 col-md-4'>
  <div class='thumbnail'>
    <img class='img-responsive' src={{product.imageUrl}}>
    <div class='caption'>
      <h5>{{product.name}}</h5>
      <p>Color: {{product.description}}</p>
      <p>Category: {{product.category}}</p>
      <p>Price: Â£{{product.price}}</p>
      <p>Stock: {{product.quantityInStock}}</p>
      {{#if noStock}}
        <center><input class='btn btn-primary disabled' type='button' value='Out of Stock'></center>
      {{else}}
        <center><button class='btn btn-primary' {{action 'addToCart' product}}>Add to cart</button>
        <button class='btn btn-primary' {{action 'removeFromCart' product}}>Remove from Cart</button></center>
      {{/if}}
    </div>
  </div>
</div>
